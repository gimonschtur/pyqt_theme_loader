/* Dark Theme - Modern Flat Design */
QWidget {
    font-family: "Segoe UI", "Roboto", sans-serif;
    font-size: 10pt;
    background-color: #1e1e1e;
    color: #e0e0e0;
}

QPushButton {
    background-color: #0078d4;
    border: none;
    padding: 5px 15px;
    border-radius: 4px;
    color: white;
}

QPushButton:hover {
    background-color: #1084d8;
}

QPushButton:pressed {
    background-color: #006cc1;
}

QLineEdit, QTextEdit, QComboBox {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    padding: 5px;
    border-radius: 4px;
}

QLineEdit:focus, QTextEdit:focus {
    border: 1px solid #0078d4;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
}

QSlider::groove:horizontal {
    height: 4px;
    background: #3d3d3d;
    margin: 2px 0;
}

QSlider::handle:horizontal {
    background: #0078d4;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QProgressBar {
    border: none;
    background-color: #3d3d3d;
    text-align: center;
    height: 12px;
    border-radius: 6px;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 6px;
}

QTabWidget::pane {
    border: 1px solid #3d3d3d;
}

QTabBar::tab {
    background: #2d2d2d;
    padding: 8px 12px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background: #0078d4;
}

QGroupBox {
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    margin-top: 1em;
    padding-top: 1em;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 3px;
}

QMenuBar {
    background-color: #2d2d2d;
}

QMenuBar::item {
    spacing: 3px;
    padding: 5px 10px;
    background: transparent;
}

QMenuBar::item:selected {
    background: #3d3d3d;
}

QStatusBar {
    background-color: #2d2d2d;
}

QToolBar {
    background-color: #2d2d2d;
    spacing: 3px;
    padding: 3px;
}